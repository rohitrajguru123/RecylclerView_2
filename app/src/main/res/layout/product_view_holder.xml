<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/imgViewHolder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:id="@+id/txtViewHol1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/imgViewHolder"
        app:layout_constraintRight_toLeftOf="@id/imgViewHolder"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:id="@+id/txtViewHol2"
        app:layout_constraintBottom_toBottomOf="@id/imgViewHolder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtViewHol1"
        app:layout_constraintRight_toLeftOf="@id/imgViewHolder"
        />

</androidx.constraintlayout.widget.ConstraintLayout>